# Admin Credentials (Seeded on first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secret_password_123
ADMIN_FULLNAME="System Administrator"

# CCTV / ANPR Configuration (RTSP URLs)
# Format: scale_id=url,scale_id=url
CCTV_RTSP_URLS="1=rtsp://admin:12345@192.168.1.10:554/stream1,2=rtsp://admin:12345@192.168.1.11:554/stream1"

# Scale Configuration (Default Fallbacks)
# Format: scale_id=port:baud_rate
SCALE_PORTS="1=COM3:9600,2=COM4:9600,3=COM5:9600"

# Server Configuration
PORT=8080
GIN_MODE=debug
SESSION_SECRET=change_this_to_a_long_random_string
